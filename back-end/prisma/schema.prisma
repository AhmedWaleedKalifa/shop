datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["typedSql"]
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  password String
  name     String?

  role       UserRole   @default(USER)
  products   Product[]
  categories Category[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id           String @id @default(uuid())
  name         String
  description  String
  buttonText   String @default("Check")
  displayOrder Int    @default(10)
  imageUrl     String @default("https://res.cloudinary.com/dgiproy8s/image/upload/v1763208708/0f4b2b6c-d3c7-4b64-9d55-3497177af7e3_prwkpe.jpg")

  createdBy              User      @relation(fields: [userId], references: [id])
  userId                 String
  products               Product[]
  horizontalTextPosition Position  @default(CENTER)
  verticalTextPosition   Position  @default(CENTER)
  status                 Status    @default(INACTIVE)
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt

  @@index([displayOrder, name])
}

model Product {
  id          String  @id @default(uuid())
  name        String
  description String
  price       Float
  discount    Float   @default(0)
  material    String?
  quantity    Int?
  factory     String?
  sku         String?

  createdBy     User           @relation(fields: [userId], references: [id])
  userId        String
  categories    Category[]
  status        Status         @default(INACTIVE)
  productColors ProductColor[]
  productSizes  ProductSize[]
  productImages ProductImage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([updatedAt])
  @@index([createdAt])
  @@index([status])
  @@index([price])
  @@index([name])
}

model ProductColor {
  id           String   @id @default(uuid())
  product      Product? @relation(fields: [productId], references: [id], onDelete: Cascade) // ✅ KEEP onDelete here
  productId    String?
  colorName    String
  hexCode      String
  displayOrder Int      @default(1)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductSize {
  id           String   @id @default(uuid())
  product      Product? @relation(fields: [productId], references: [id], onDelete: Cascade) // ✅ KEEP onDelete here
  productId    String?
  size         Int
  sizeSymbol   String
  displayOrder Int      @default(1)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductImage {
  id           String   @id @default(uuid())
  product      Product? @relation(fields: [productId], references: [id], onDelete: Cascade) // ✅ KEEP onDelete here
  productId    String?
  imageUrl     String
  altText      String
  isPrimary    Boolean?
  displayOrder Int      @default(1)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  USER
  ADMIN
  MODERATOR
}

enum Status {
  ACTIVE
  INACTIVE
  OUT_OF_STOCK
  DRAFT
}

enum Position {
  CENTER
  START
  END
}
